#!/usr/bin/python3.10
# -*- coding: utf-8 -*-

import os
import sys

config_map = {}

def map_config(source_dir, site_config):
    global config_map
    source_dir = os.path.realpath(source_dir)
    source_dir = os.path.normcase(source_dir)
    site_config = os.path.normpath(site_config)
    config_map[source_dir] = site_config

# Set up some builtin parameters, so that by default the LLVM test suite
# configuration file knows how to find the object tree.
builtin_parameters = { 'build_mode' : '.' }

# Allow generated file to be relocatable.
from pathlib import Path
def path(p):
    if not p: return ''
    return str((Path(__file__).parent / p).resolve())


map_config(path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/clang/test/lit.cfg.py'), path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/build/tools/clang/test/lit.site.cfg.py'))
map_config(path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/clang/test/Unit/lit.cfg.py'), path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/build/tools/clang/test/Unit/lit.site.cfg.py'))
map_config(path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/mlir/test/lit.cfg.py'), path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/build/tools/mlir/test/lit.site.cfg.py'))
map_config(path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/mlir/test/Unit/lit.cfg.py'), path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/build/tools/mlir/test/Unit/lit.site.cfg.py'))
map_config(path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/flang/test/lit.cfg.py'), path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/build/tools/flang/test/lit.site.cfg.py'))
map_config(path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/flang/test/Unit/lit.cfg.py'), path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/build/tools/flang/test/Unit/lit.site.cfg.py'))
map_config(path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/flang/test/NonGtestUnit/lit.cfg.py'), path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/build/tools/flang/test/NonGtestUnit/lit.site.cfg.py'))
map_config(path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/llvm/utils/lit/tests/lit.cfg'), path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/build/utils/lit/lit.site.cfg'))
map_config(path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/llvm/test/lit.cfg.py'), path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/build/test/lit.site.cfg.py'))
map_config(path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/llvm/test/Unit/lit.cfg.py'), path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/build/test/Unit/lit.site.cfg.py'))

builtin_parameters['config_map'] = config_map

# Make sure we can find the lit package.
llvm_source_root = path(r'/home/sylvestre/dev/debian/pkg-llvm/llvm-toolchain/branches/llvm-project/llvm')
sys.path.insert(0, os.path.join(llvm_source_root, 'utils', 'lit'))

if __name__=='__main__':
    from lit.main import main
    main(builtin_parameters)
